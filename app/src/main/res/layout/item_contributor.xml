<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="contributor"
            type="com.githang.gradledoc.app.others.Contributor"/>
    </data>
    <android.support.v7.widget.CardView
        style="@style/RippleCardView"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

        <RelativeLayout
            style="@style/ListViewItem"
            android:padding="16dp">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="8dp"
                app:imageUrl="@{contributor.avatar}"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/avatar"
                android:text="@{contributor.name}"
                tools:text="name"/>

            <TextView
                android:id="@+id/contributions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/avatar"
                android:layout_below="@id/name"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@id/avatar"
                android:text="@{contributor.contributions + ` contributors`}"
                tools:text="3 contributors"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>
